// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"

      // key bindings to trigger 'television' fuzzy finding searches
      "ctrl-shift-f": [
        "task::Spawn",
        { "task_name": "file_finder", "reveal_target": "center" }
      ],
      "ctrl-shift-g": [
        "task::Spawn",
        { "task_name": "text_finder", "reveal_target": "center" }
      ]
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  }
]
